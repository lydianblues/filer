<% content_for :head do %>

<!-- Bootstrap CSS Toolkit styles -->
<%= stylesheet_link_tag("blueimp/bootstrap.min.css") %>

<!-- Bootstrap styles for responsive website layout,
  supporting different screen sizes -->
<%= stylesheet_link_tag("blueimp/bootstrap-responsive.min.css") %> 

<!-- Bootstrap CSS fixes for IE6 -->
<!--[if lt IE 7]><link rel="stylesheet" href="http://blueimp.github.com/cdn/css/bootstrap-ie6.min.
css"><![endif]-->

<!-- Bootstrap Image Gallery styles -->
<%= stylesheet_link_tag("blueimp/bootstrap-image-gallery.min.css") %>

<!-- CSS to style the file input field as button and adjust the Bootstrap progress bars -->
<%= stylesheet_link_tag "jquery.fileupload-ui" %>

<!-- Shim to make HTML5 elements usable in older Internet Explorer versions -->
<!--[if lt IE 9]><script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script><![endif]-->

<% end %>
    
<div class="files-wrapper">
    <div class="liner">

        <%= form_for(Document.new,
          :url => folder_uploads_path(current),
          :html => {:multipart => true,
          :id => "fileupload-form-#{filespace}",
            :class => "fileupload-control"}) do |f| %>
              
            <div class="row fileupload-buttonbar">
                <div class="span7">
                    <span class="btn btn-success fileinput-button">
                        <i class="icon-plus icon-white"></i>
                        <span>Add files...</span>
                        <%= f.file_field :content %>
                    </span>
                    <button type="submit" class="btn btn-primary start">
                        <i class="icon-upload icon-white"></i>
                        <span>Start upload</span>
                    </button>
                    <button type="reset" class="btn btn-warning cancel">
                        <i class="icon-ban-circle icon-white"></i>
                        <span>Cancel upload</span>
                    </button>
                    <button type="button" class="btn btn-danger delete">
                        <i class="icon-trash icon-white"></i>
                        <span>Delete</span>
                    </button>
                    <input type="checkbox" class="toggle">
                </div>
                <div class="span5">
                    <!-- The global progress bar -->
                    <div class="progress progress-success progress-striped active fade">
                        <div class="bar" style="width:0%;"></div>
                    </div>
                </div>
            </div>
        
            <!-- The loading indicator is shown during image processing -->
            <div class="fileupload-loading"></div>
            <br>
        
            <!-- The table listing the files available for upload/download -->
            <table class="table table-striped">
                <tbody class="files" data-toggle="modal-gallery"
                  data-target="#modal-gallery">
                </tbody>
            </table>
        <% end %>
    </div>
</div>



<!-- Bootstrap JS and Bootstrap Image Gallery are not required,
  but included for the demo. -->

<!--[if gte IE 8]><script src="fileupload/cors/jquery.xdr-transport.js"></script><![endif]-->


<script>
  var fileUploadErrors = {
    maxFileSize: 'File is too big',
    minFileSize: 'File is too small',
    acceptFileTypes: 'Filetype not allowed',
    maxNumberOfFiles: 'Max number of files exceeded',
    uploadedBytes: 'Uploaded bytes exceed file size',
    emptyResult: 'Empty file upload result'
  };
</script>

<%= javascript_include_tag 'fileupload' %>

<script>
    $(function () {
        // Initialize the jQuery File Upload widget:
        $(".fileupload-control").each(function(index, element) {
            $(this).fileupload();
        });
    });
</script>



